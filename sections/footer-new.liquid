<style>
  .footer-main{
      {%  if section.settings.footer_background != blank  %}
        background-image: url('{{ section.settings.footer_background |  img_url: 'original' }}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        {% else %}
            background-color: #20231C;
        {% endif %}

  }
</style>

<div class="footer-main">
  <div class="container">
    <div class="footer-wrapper">
      <div class="footer-top">
        {% for block in section.blocks %}
          {% if block.type == 'social_icons' %}
            <div class="footer-about-block">
              <div class="footer-block-header">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
              </div>
              <div class="footer-social-icon-list">
                {% if block.settings.show_twitter %}
                  <a href="{{ block.settings.twitter_link }}">
                    <div class="social-icon-svg">
                      <svg width="22" height="18" viewBox="0 0 22 18" fill="none" xmlns="http://www.w3.org/2000/svg">
